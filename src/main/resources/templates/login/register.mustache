<script>
{
    const registerBtn = document.querySelector("#reegister-btn")
    registerBtn.addEventListener("click", event => {
        const user = {
            username : document.querySelector("#floatingUsername").value,
            password : document.querySelector("#floatingPassword").value,
            rePassword : document.querySelector("#floatingRePassword").value,
            email : document.querySelector("#floatingEmail").value
        };
        const url = "/register";
        fetch(url, {
            method: "post",
            body: JSON.stringify(user),
            headers: {
                "Content-Type" : "application/json"
            }
        }).then(response => {
            const msg = (response.ok) ? "회원가입이 완료되었습니다." : "회원 가입 실패";
            alert(msg);
            console.log(msg);
            window.location.reload();
        }) ;
    });
}
